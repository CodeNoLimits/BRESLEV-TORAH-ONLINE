{
  "framework": "nextjs",
  "buildCommand": "npm build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "regions": ["iad1", "cdg1"],
  "functions": {
    "src/app/api/backend/[...path]/route.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/backend/:path*",
      "destination": "https://api.breslev-torah.com/api/v1/:path*"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "@breslev_api_url",
    "NEXT_PUBLIC_ENVIRONMENT": "@environment"
  }
}